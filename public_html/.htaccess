#Alternate default index page
DirectoryIndex Home.html

#Alternate default index pages
DirectoryIndex Home.html index.html

# mod_rewrite starts here

RewriteEngine on

# does not apply to existing directories, meaning that if the folder exists on the server then donÂ´t change anything and dunt run the rule

RewriteCond %{REQUEST_FILENAME} !-d

# Check for file in directory with .html ext

RewriteCond %{REQUEST_FILENAME}\.html -f

# Here we actually show the pages that has the .html ext

RewriteRule ^(.*)$ $1.html [NC,L]